<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="add"
    android:background="@drawable/bgg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/grupall">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:adjustViewBounds="true"
                android:background="@drawable/logo"
                android:layout_gravity="left"
                android:layout_marginLeft="65dp"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:adjustViewBounds="true"
                android:background="@drawable/logo2"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/grup1"
            android:visibility="visible">

            <TextView
                android:id="@+id/nyapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="test"
                android:textSize="35sp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:id="@+id/pack1"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="50dp">

                <RelativeLayout
                    android:id="@+id/gofil"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/bgformhome">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_account_circle_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgProfile"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="PROFILE"
                        android:textColor="@color/gold"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dafit"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bgformhome">

                    <ImageView
                        android:id="@+id/imgHistory"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/kopi" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgHistory"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="M E N U"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pack2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="30dp">

                <RelativeLayout
                    android:id="@+id/ctcsrvc"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="left"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/bgformhome">

                    <ImageView
                        android:id="@+id/imgKereta"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/contactt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgKereta"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="CONTACT\nSERVICE"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#FFB908"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/infoapp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bgformhome">

                    <ImageView
                        android:id="@+id/imgHotel"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_info_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgHotel"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="INFO\nAPLIKASI"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/gold"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/klikout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="30dp"
                android:text="Keluar"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/bgbtn">
            </Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/grup2"
            android:layout_margin="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noact"
                android:background="@drawable/bg"
                android:text="@string/desk_app"
                android:textColor="@color/gold"
                android:gravity="center"
                android:textSize="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF7600"
                android:text="BERANDA"
                android:layout_gravity="center"
                android:id="@+id/gohom"/>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>